@import 'nib/vendor'
//@import '../lib/normalize'
@import '../base/variables'

@import url("http://fonts.googleapis.com/css?family=Open+Sans:700,300,600,800,400")

-vendor-prefixes = o ms moz webkit official

::scrollbar-track 
   background-color #333332

::scrollbar
   width 7px
   background-color #F5F5F5

::scrollbar-thumb
   background-color facebook

::-webkit-scrollbar-track 
   background-color #333332
   
::-webkit-scrollbar
   width 7px
   background-color #F5F5F5

::-webkit-scrollbar-thumb
   background-color facebook

::-o-scrollbar-track 
   background-color #333332
   
::-o-scrollbar
   width 7px
   background-color #F5F5F5

::-o-scrollbar-thumb
   background-color facebook

::-moz-scrollbar-track 
   background-color #333332
   
::-moz-scrollbar
   width 7px
   background-color #F5F5F5

::-moz-scrollbar-thumb
   background-color facebook

*
   outline none

body
	font-size 16px
	font-family 'Open Sans', sans-serif
	font-weight 300
	overflow-x hidden
	overflow-y auto
	padding 0
	margin 0
	
	header
		background facebook
		margin 0
		padding 0
		position absolute
		top 0
		width 100%
		z-index 9999
		
		nav
			ul
				width 100%
				margin 0
				padding 0
				
				li
					display inline-block
					vertical-align middle
					margin 0.75em
					
					&.right
						float right
					
					a
						color white
						text-decoration none
						font-size 1em

	section
		margin 0
		padding 0
		width 100%
		position relative
	
	footer
		background transparent
		padding 1em
		margin 0 auto
		
		h3
			color gray
			font-size 1.5em
			text-align center
			font-weight 300

		ul
			list-style none
			text-align center
			padding 0
			display block
			
			li
				font-size 1em
				display inline-block
				vertical-align middle
				margin 0.5em
				
				a
					color gray
					text-decoration none